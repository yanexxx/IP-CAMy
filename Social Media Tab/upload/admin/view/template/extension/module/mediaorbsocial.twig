{{ header }}{{ column_left }}
<div id="content">
  <div class="page-header">
    <div class="container-fluid">
      <div class="pull-right">
        <button type="submit" form="form-module" data-toggle="tooltip" title="{{ btn_save }}" class="btn btn-primary"><i class="fa fa-save"></i></button>
        <a href="{{ cancel }}" data-toggle="tooltip" title="{{ btn_cancel }}" class="btn btn-default">
          <i class="fa fa-reply"></i>
        </a>
      </div>
      <h1>{{ heading }}</h1>
      {# <ul class="breadcrumb">
        {% for breadcrumb in breadcrumbs %}
        <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
        {% endfor %}
      </ul> #}
    </div>
  </div>
  <div class="container-fluid">
    {% if error_warning %}
    <div class="alert alert-danger alert-dismissible"><i class="fa fa-exclamation-circle"></i> {{ error_warning }}
      <button type="button" class="close" data-dismiss="alert">&times;</button>
    </div>
    {% endif %}
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title"><i class="fa fa-pencil"></i> {{ edit }}</h3>
      </div>
      <div class="panel-body">
        <div>
          <p>{{ about }}</p>
          <p>{{ example }}</p>
        </div>
        <form action="{# {{ action }} #}" method="post" enctype="multipart/form-data" id="form-module" class="form-horizontal">
          {# ** FORM GROUP TO ENABLE/DISABLE MODULE ** #}
          <div class="form-group">
            <label class="col-sm-2 control-label" for="input-status">{{ status }}</label>
            <div class="col-sm-10">
              <select name="module_category_status" id="input-status" class="form-control">
                {% if module_category_status %}
                <option value="1" selected="selected">{{ placeholder_enabled }}</option>
                <option value="0">{{ placeholder_disabled }}</option>
                {% else %}
                <option value="1">{{ placeholder_enabled }}</option>
                <option value="0" selected="selected">{{ placeholder_disabled }}</option>
                {% endif %}
              </select>
            </div>
          </div>
          {# **** #}
          {# ** FORM GROUP TO SELECT LINK LOCATION **#}
          <div class="form-group">
            <label class="col-sm-2 control-label">{{ location }}</label>
            <div class="col-sm-10">
              <div class="well well-sm"> {% for location in locArray %}
                <div class="checkbox">
                  <label>
                      <input type="checkbox" name="config_mail_alert[]" value="{{ location }}" />
                      {{ location }}
                  </label>
                </div>
                {% endfor %}
              </div>
              {{ desc_location }}
            </div>
          </div>
          {# **** #}
          {# ** FORM GROUP TO SELECT LINK INFORMATION **#}
          <div class="form-group">
            <label class="col-sm-2 control-label">{{ appearance }}</label>
            <div class="col-sm-10">
              <div class="well well-sm"> {% for options in apArray %}
                <div class="checkbox">
                  <label>
                      <input type="checkbox" name="config_mail_alert[]" value="{{ options }}" />
                      {{ options }}
                  </label>
                </div>
                {% endfor %}
              </div>
              {{ desc_appear }}
            </div>
          </div>
          {# **** #}
          {# ** FORM GROUP TO ENTER FACEBOOK URL ** #}
          <div class="form-group">
            <label class="col-sm-2 control-label" for="input-name">{{ facebook }}</label>
            <div class="col-sm-10">
              <input type="text" name="module_category_status" id="input-fb" class="form-control" />
            </div>
          </div>
          {# ** FORM GROUP TO ENTER TWITTER URL ** #}
          <div class="form-group">
            <label class="col-sm-2 control-label" for="input-name">{{ twitter }}</label>
            <div class="col-sm-10">
              <input type="text" name="module_category_status" id="input-tw" class="form-control" />
            </div>
          </div>
          {# **** #}
          {# ** FORM GROUP TO ENTER INSTAGRAM URL ** #}
          <div class="form-group">
            <label class="col-sm-2 control-label" for="input-name">{{ instagram }}</label>
            <div class="col-sm-10">
              <input type="text" name="module_category_status" id="input-in" class="form-control" />
            </div>
          </div>
          {# **** #}
        </form>
      </div>
    </div>
  </div>
</div>
{{ footer }}
